{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "target": "ES2020",                // good balance for Node 18/20
    "module": "CommonJS",              // Node.js uses CommonJS by default
    "esModuleInterop": true,           // allows default imports (import express from "express")
    "moduleResolution": "node",        // standard Node module resolution
    "types": ["node"],                 // load Node.js types

    // Other Outputs
    "sourceMap": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
